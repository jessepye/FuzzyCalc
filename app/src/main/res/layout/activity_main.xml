<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="9">

    <TextView
        android:id="@+id/calculationWindow"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/fieldSelected"
        android:gravity="start"
        android:padding="16dp"
        android:textSize="28dp" />

    <TextView
        android:id="@+id/resultWindow"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/fieldNotSelected"
        android:gravity="end"
        android:padding="16dp"
        android:textSize="28dp" />


        <TextView
            android:id="@+id/guessWindow"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/fieldNotSelected"
            android:padding="16dp"
            android:textSize="28dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/btn_sqr"
            style="?android:attr/borderlessButtonStyle"
            android:background="@color/buttonLight"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="x^2"
            android:textAllCaps="false"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btn_sqrt"
            style="?android:attr/borderlessButtonStyle"
            android:background="@color/buttonLight"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="√"
            android:textAllCaps="false"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btn_backsp"
            style="?android:attr/borderlessButtonStyle"
            android:background="@color/backspaceButton"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="⌫"
            android:textAllCaps="false"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btn_clr"
            style="?android:attr/borderlessButtonStyle"
            android:background="@color/clearButton"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="C"
            android:textAllCaps="false"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/btn_exp"
            style="?android:attr/borderlessButtonStyle"
            android:background="@color/buttonLight"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="^"
            android:textAllCaps="false"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btn_opn_paren"
            style="?android:attr/borderlessButtonStyle"
            android:background="@color/buttonLight"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="("
            android:textAllCaps="false"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btn_cls_paren"
            style="?android:attr/borderlessButtonStyle"
            android:background="@color/buttonLight"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=")"
            android:textAllCaps="false"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btn_div"
            style="?android:attr/borderlessButtonStyle"
            android:background="@color/buttonMedium"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="÷"
            android:textAllCaps="false"
            android:textSize="18dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/btn_7"
            style="?android:attr/borderlessButtonStyle"
            android:background="@color/buttonDark"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="7"
            android:textAllCaps="false"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btn_8"
            style="?android:attr/borderlessButtonStyle"
            android:background="@color/buttonDark"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="8"
            android:textAllCaps="false"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btn_9"
            style="?android:attr/borderlessButtonStyle"
            android:background="@color/buttonDark"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:textAllCaps="false"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btn_mul"
            style="?android:attr/borderlessButtonStyle"
            android:background="@color/buttonMedium"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="×"
            android:textAllCaps="false"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/btn_4"
            style="?android:attr/borderlessButtonStyle"
            android:background="@color/buttonDark"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="4"
            android:textAllCaps="false"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btn_5"
            style="?android:attr/borderlessButtonStyle"
            android:background="@color/buttonDark"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:textAllCaps="false"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btn_6"
            style="?android:attr/borderlessButtonStyle"
            android:background="@color/buttonDark"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:textAllCaps="false"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btn_sub"
            style="?android:attr/borderlessButtonStyle"
            android:background="@color/buttonMedium"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:textAllCaps="false"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/btn_1"
            style="?android:attr/borderlessButtonStyle"
            android:background="@color/buttonDark"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="1"
            android:textAllCaps="false"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btn_2"
            style="?android:attr/borderlessButtonStyle"
            android:background="@color/buttonDark"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="2"
            android:textAllCaps="false"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btn_3"
            style="?android:attr/borderlessButtonStyle"
            android:background="@color/buttonDark"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="3"
            android:textAllCaps="false"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btn_add"
            style="?android:attr/borderlessButtonStyle"
            android:background="@color/buttonMedium"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="+"
            android:textAllCaps="false"
            android:textSize="18dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/btn_0"
            android:background="@color/buttonDark"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="0"
            android:textAllCaps="false"
            android:textSize="18dp" />


        <Button
            android:id="@+id/btn_dot"
            style="?android:attr/borderlessButtonStyle"
            android:background="@color/buttonDark"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="."
            android:textAllCaps="false"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btn_neg"
            style="?android:attr/borderlessButtonStyle"
            android:background="@color/buttonDark"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="(-)"
            android:textAllCaps="false"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btn_ent"
            style="?android:attr/borderlessButtonStyle"
            android:background="@color/enterButton"
            android:textColor="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="ENTER"
            android:textAllCaps="false"
            android:textSize="16dp" />

    </LinearLayout>
</LinearLayout>
</android.support.constraint.ConstraintLayout>